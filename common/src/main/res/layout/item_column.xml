<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/column_root_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_V_I"
    android:paddingLeft="@dimen/margin_I_V"
    android:paddingRight="@dimen/margin_I_V"
    tools:background="#45ff07">
    <TextView
        android:id="@+id/column_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:textColor="@color/default_black"
        android:textSize="@dimen/lab_font_big"
        android:textStyle="bold"
        tools:text="栏目名称"/>

    <TextView
        android:id="@+id/column_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|right"
        android:gravity="center_vertical"
        android:textColor="@color/default_grey_dark"
        android:textSize="@dimen/lab_font_small"
        tools:text="查看全部"/>
</FrameLayout>