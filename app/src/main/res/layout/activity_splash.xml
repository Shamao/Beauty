<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/a_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.splash.v.activity.SplashActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_large"
        android:src="@drawable/ic_app_property"/>
    <ImageView
        android:id="@+id/logo_iv"
        android:layout_width="200dp"
        android:layout_height="109dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:adjustViewBounds="true"
        android:src="@drawable/default_splash"/>
    <TextView
        android:id="@+id/count_down_tv"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/margin_large"
        android:background="@drawable/round_count_down"
        android:gravity="center"
        android:textColor="@color/default_white"
        android:textSize="@dimen/font_mini"
        android:visibility="gone"
        tools:text="4 s"/>
</RelativeLayout>
