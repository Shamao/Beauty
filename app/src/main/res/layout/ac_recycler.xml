<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/default_grey_bg"
    tools:context="beauty.louise.com.zLab.SnapHelperActivity">

    <beauty.louise.com.view.UIGradientTopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/default_white"
        app:bbs_title="RecyclerView之SnapHelper专题"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/linear_snap_recycler"
        android:layout_width="match_parent"
        android:layout_height="120dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/pager_snap_recycler"
        android:layout_width="match_parent"
        android:layout_height="120dp"/>


</LinearLayout>
