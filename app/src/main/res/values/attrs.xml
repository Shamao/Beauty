<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="UIDotIndicatorView">
        <attr name="select_color" format="color|reference"/>
        <attr name="un_select_color" format="color|reference"/>
        <attr name="min_width" format="dimension"/>
        <attr name="offset" format="dimension"/>
        <attr name="margin" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="UIGradientTopBar">
        <attr name="bbs_left_src" format="reference"/>
        <attr name="bbs_right_src" format="reference"/>
        <attr name="bbs_title" format="string|reference"/>
        <attr name="bbs_title_size" format="dimension|reference"/>
        <attr name="bbs_title_color" format="color|reference"/>
        <attr name="bbs_bg_alpha" format="float"/>
    </declare-styleable>

    <declare-styleable name="UIRatioImageView">
        <attr name="vertical_weight" format="integer"/>
        <attr name="horizontal_weight" format="integer"/>
        <attr name="base_line" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
    </declare-styleable>
</resources>