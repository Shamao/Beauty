<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.louise.gank.GankSplashActivity">

    <cc.hiy.baseui.titlebar.UITitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

    <ImageView
        android:id="@+id/intro_iv"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <cc.hiy.baseui.flexbox.UIFlexBoxView
        android:id="@+id/ad_flex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:alignContent="center"
        app:alignItems="center"
        app:flexWrap="wrap"
        app:justifyContent="space_around"
        app:showDivider="middle"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/habit_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee"
        android:overScrollMode="never"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        tools:listitem="@layout/gank_item_view_habit">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
